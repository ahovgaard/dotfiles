# CPU usage -------------------------------------------------------------------
^fg(\#bbbbbb) | ^fg() \
^fg(\#6d878d)^i(/home/akh/.xmonad/dzen/icons/xbm8x8/cpu.xbm) \
${if_match ${cpu cpu1}<15}^fg(\#00ff00)${cpu cpu1}\
${else}${if_match ${cpu cpu1}<35}^fg(\#ffff00)${cpu cpu1}\
${else}^fg(\#ff0000)${cpu cpu1}${endif}${endif}^fg(), \
${if_match ${cpu cpu2}<15}^fg(\#00ff00)${cpu cpu2}\
${else}${if_match ${cpu cpu2}<35}^fg(\#ffff00)${cpu cpu2}\
${else}^fg(\#ff0000)${cpu cpu2}${endif}${endif}^fg(), \
${if_match ${cpu cpu3}<15}^fg(\#00ff00)${cpu cpu3}\
${else}${if_match ${cpu cpu3}<35}^fg(\#ffff00)${cpu cpu3}\
${else}^fg(\#ff0000)${cpu cpu3}${endif}${endif}^fg(), \
${if_match ${cpu cpu4}<15}^fg(\#00ff00)${cpu cpu4}\
${else}${if_match ${cpu cpu4}<35}^fg(\#ffff00)${cpu cpu4}\
${else}^fg(\#ff0000)${cpu cpu4}${endif}${endif}^fg() \
